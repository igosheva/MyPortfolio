head
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')
	meta(http-equiv='X-UA-Compatible' content='IE=edge')
	meta(name='imagetoolbar' content='no')
	meta(name='msthemecompatible' content='no')
	meta(name='cleartype' content='on')
	meta(name='HandheldFriendly' content='True')

	meta(name='format-detection' content='telephone=no')
	meta(name='format-detection' content='address=no')

	meta(name='google' value='notranslate')

	meta(name='theme-color' content='#ffffff')

	meta(name='apple-mobile-web-app-capable' content='yes')
	meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
	link(sizes='16x16'   href='assets/images/favicon.png'   rel='icon' type='image/png')

	link(rel='manifest' href='/manifest.json')

	meta(name='application-name' content=pageTitle || '')
	meta(name='msapplication-tooltip' content=pageDescription || '')

	//- http://realfavicongenerator.net/faq#why_ico_not_declared

	- var stylesPrefix = paths.styles;

	link(href=stylesPrefix + 'app.min.css' rel='stylesheet')
	block head
	title= pageTitle || ''

	meta(name='description' content=pageDescription || '')
	meta(name='keywords' content=pageKeywords || '')
